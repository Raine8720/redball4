        <script type="text/javascript">
            function sayhello(){
                alert('Hi There');
            }
            
            function moveright(){
            
                redball.left=redball.left+1;
                
            }
            
            function moveleft(){
                redball.left=redball.left-1;
            }
            
            function moveUp(){
                redball.top=redball.top-1;
            }
            
            function moveDown(){
                redball.top=redball.top+1;
            }

            //repeating statements
            function moveUpperRight(){
               moveUp();
               moveright();
               }
            
            //From Das: another way to do this by reusing functions
            function moveDownLeft(){
                
                var i = 0;
                for(i=0; i<100; i++){
                moveDown();
                moveleft();
                    
                }
            }
            
            
            // travel a  square path
            function squarepath(){
                var x = 0;
                var y = 0;
                
                for(x=0; x<100; x++){
                    moveright();
                
                } 
                
                for(y=0; y<50; y++){
                    moveUp();
                }
                
                for(x=100; x>0; x--){
                    moveleft();
                }
                for(y=50; y>0; y--){
                    moveDown();
                }
            }
            
            //test allens using a function call input
            
            function repeatUpR(repeat){
                mo
            }
                
        </script>
        
